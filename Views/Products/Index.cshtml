                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 col-lg-push-3 col-md-push-3">
                    <div class="ps-shop-grid pt-80">
                        <div class="ps-shop-features">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                                    <img class="mb-30" src="images/product-banner/012x.jpg" alt="">
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 ">
                                    <img class="mb-30" src="images/product-banner/022x.jpg" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="ps-shop ps-col-tiny">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                                        <div class="ps-product">
                                            <div class="ps-product__thumbnail">

                                                <a class="ps-product__overlay" href="#"></a>
                                                <img src="@Html.DisplayFor(modelItem=>item.Image)" alt="" height="262" width="283">
                                                <ul class="ps-product__action">
                                                    <li><a asp-action="Details" asp-route-id="@item.ProductId" data-tooltip="view detail"><i class="ps-icon--shopping-cart"></i></a></li>
                                                </ul>
                                            </div>
                                            <div class="ps-product__content">

                                                <a class="ps-product__title" asp-action="Details" asp-route-id="@item.ProductId"> @Html.DisplayFor(modelItem => item.ProductName)</a> |

                                                <p class="ps-product__price">@Html.DisplayFor(modelItem => item.Price)</p>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
