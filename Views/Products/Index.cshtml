                                        </div>
                                        <div class="ps-product__content">
                                            <h4 class="ps-product__title"><a asp-action="Details" asp-route-id="@topSellers[2].ProductId">@topSellers[2].ProductName</a></h4>
                                            <p class="ps-product__price">
                                                @topSellers[2].Price
                                            </p>
